<html>
  <header>
    <title>Edit Owner</title>
    <link href="<%= url('/pets_style.css') %>" rel="stylesheet" type="text/css" />
  </header>

  <body>
    <h3>Edit an owner</h3>
    <h4><a href='/'>All Owners</a></h4>
    <form action='/owners/<%= owner.id %>' method='post' class='centered'>
      <label>First Name</label>
      <input type='text' name='first_name' required value='<%= owner.first_name %>' />
      <input type='hidden' name='_method' value='put'>
      <button type='submit'>Save Edit</button>
    </form>
  </body>
</html>
